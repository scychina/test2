<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/base_filmName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/base_filmTime"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/base_filmName" />

    <ImageView
        android:id="@+id/base_fileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/base_filmTime" />

    <TextView
        android:id="@+id/price"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/base_fileImage" />

    <TextView
        android:id="@+id/countOfPeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/price" />


</RelativeLayout>
